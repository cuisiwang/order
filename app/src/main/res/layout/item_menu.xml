<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="71sp"
    android:paddingHorizontal="15dp"
    android:paddingVertical="3dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/item_menu_iv"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/test_pic"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent"
        android:layout_marginLeft="15sp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_menu_tv_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="AAAAAAAAAAA"
            android:textSize="20sp"
            android:textFontWeight="20"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/item_menu_tv_dsc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="BBBBBBBBBBBBBB"
            android:textSize="8sp"
            android:textColor="#AAAAAA"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_menu_tv_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/item_menu_add_ib"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:src="@drawable/menu_add"
        android:background="#00000000"
        app:tint="@color/add_button_pressed" />


</LinearLayout>