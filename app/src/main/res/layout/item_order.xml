<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    android:background="#08000000"
    android:paddingHorizontal="15dp"
    android:paddingVertical="3dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/item_order_iv"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/test_pic"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent"
        android:layout_marginLeft="15sp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_order_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="AAAAAAAAAAA"
            android:textSize="20sp"
            android:textFontWeight="20"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/item_order_tv_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="BBBBBBBBBBBBBB"
            android:textSize="7sp"
            android:textColor="#AAAAAA"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_order_tv_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/item_order_delete_ib"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:src="@drawable/order_delete"
        android:background="#00000000"/>



</LinearLayout>